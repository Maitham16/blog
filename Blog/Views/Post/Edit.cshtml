@model Blog.Models.Post

<h2>Edit Post</h2>

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShortDesc">Short Description</label>
        <input asp-for="ShortDesc" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Body">Body</label>
        <textarea asp-for="Body" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Posted">Posted</label>
        <input asp-for="Posted" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
